<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.schultzoss_montpellier.melvin.fivehock">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="16"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logofivehock"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
      
        <activity
            android:screenOrientation="portrait"
            android:name=".RegisterActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name=".UserAccountActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name=".ResetPasswordActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name=".QuestionActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name=".AddQuestionActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name=".AccueilActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name=".QuizScoreActivity">
        </activity>
    </application>

</manifest>