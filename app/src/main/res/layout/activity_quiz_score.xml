<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.schultzoss_montpellier.melvin.fivehock.QuizScoreActivity">

    <TextView
        android:text="Résultat du quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewScoreQuiz"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Retour à l'accueil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBackMenu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Bonne(s) réponse(s) :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/buttonBackMenu"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="xp"
        android:textSize="80px"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewUserXp"
        android:layout_alignTop="@+id/circle_progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp" />

    <ProgressBar
        android:id="@+id/circle_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:indeterminate="false"
        android:max="10"
        android:minHeight="300dp"
        android:progress="0"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewScoreQuiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:progressDrawable="@drawable/circular" />

    <TextView
    android:text="good"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:id="@+id/textViewUserGoodAnswers"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignEnd="@+id/textViewScoreQuiz" />


</RelativeLayout>
