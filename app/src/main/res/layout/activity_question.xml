<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.schultzoss_montpellier.melvin.fivehock.QuestionActivity">

    <TextView
        android:text="Question 1 ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewQuestion"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textAlignment="center"
        android:textAllCaps="false" />

    <Button
        android:text="Answer 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAnswerOne"
        android:layout_below="@+id/textViewQuestion"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textAllCaps="false" />

    <Button
        android:text="Answer 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAnswerOne"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonAnswerTwo"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false" />

    <Button
        android:text="Answer 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAnswerThree"
        android:layout_below="@+id/buttonAnswerTwo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false" />

    <Button
        android:text="Answer 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAnswerThree"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonAnswerFour"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false" />

    <Button
        android:text="Answer 5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAnswerFour"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonAnswerFive"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonCancel" />

    <Button
        android:text="Skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/buttonSkip" />
</RelativeLayout>
